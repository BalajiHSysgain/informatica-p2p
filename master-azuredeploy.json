{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus",
            "allowedValues": [
                "eastus",
                "eastus2",
                "northcentralus",
                "southcentralus",
                "westus",
                "northeurope",
                "westeurope",
                "eastasia",
                "southeastasia",
                "japaneast",
                "japanwest",
                "australiaeast",
                "australiasoutheast"
            ],
            "metadata": {
                "description": "Deployment location"
            }
        },
        "sqlDWDBAdminName": {
            "type": "string",
            "metadata": {
                "description": "SQL Datawarehouse Admin User Name"
            }
        },
        "sqlDWAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "SQL Datawarehouse Admin password. Ex: Testadmin@123"
            }
        },
        "jobId": {
            "type": "string",
            "defaultValue": "5f32ff4e-a5c5-47af-8b70-981c896a9163",
            "metadata": {
                "description": "Job Id of the automation Job, use https://www.guidgenerator.com to generate unique jobid"
            }
        },
        "start": {
            "type": "string",
            "metadata": {
                "description": "Start time of the data slice. ex: 2014-06-01T18:00:00"
            }
        },
        "end": {
            "type": "string",
            "metadata": {
                "description": "end time of the data slice. ex: 2014-06-01T18:00:00"
            }
        },
        "tag": {
            "type": "object",
            "defaultValue": {
                "value1": "informatica"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "username to login into informatica vm"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "password to login into informatica vm"
            }
        },
        "publicIPdnsPrefix": {
            "type": "string",
            "metadata": {
                "description": " public IP dns prefix"
            }
        },
        "armBaseUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/sysgain/informatica-p2p/master",
            "metadata": {
                "description": "Base URl for dependent templates/scripts"
            }
        },
        "arguments": {
            "type": "string",
            "metadata": {
                "description": "Pass in the username and password. Use doublequotes around the arguments with spaces"
            }
        },
        "script": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Hive query inline script"
            }
        }
    },
    "variables": {
        "sqlDWServName": "sqlserv",
        "sqlDWDBName": "testdwdb",
        "serviceLevelObjective": "DW100",
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255",
        "automationAccountName": "accountaccess",
        "credentialName": "aocred",
        "runbookName": "createtable",
        "dataFactName": "adf",
        "tableName": "bi9",
        "inputFolderPath": "adfgetstarted/inputdata",
        "outputFolderPath": "adfgetstarted/partitioneddata",
        "vmName": "informatica",
        "storageAccountName": "infosa",
        "adfstorageAccountName": "adfsa",
        "storageAccName": "[concat(variables('storageAccountName'),uniqueString(resourceGroup().id))]",
        "adfstorageAccName": "[concat(variables('adfstorageAccountName'),uniqueString(resourceGroup().id))]",
        "sqlDWServerName": "[concat(variables('sqlDWServName'),uniqueString(resourceGroup().id))]",
        "accountName": "[concat(variables('automationAccountName'),uniqueString(resourceGroup().id))]",
        "dataFactoryName": "[concat(variables('dataFactName'),uniqueString(resourceGroup().id))]",
        "pubicIPAddressName": "[concat(variables('vmName'),'-publicIp')]",
        "vnetName": "[concat(variables('vmName'),'-vnet')]",
        "networkInterfaceName": "[concat(variables('vmName'),'-nic')]",
        "networkSecurityGroupsName": "[concat(variables('vmName'),'-nsg')]",
        "subnet1Name": "subnet1",
        "vnetAddressPrefix": "10.2.0.0/16",
        "subnet1Prefix": "10.2.0.0/24",
        "storageAccountType": "Standard_LRS",
        "vmSize": "Standard_A2",
        "storageContainer": "vhds",
        "imagePublisher": "informatica-cloud",
        "imageOffer": "informatica-cloud",
        "imageVersion": "latest",
        "imageSKU": "informatica_cloud_secure_agent_32_bit",
        "subnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('vnetName')), '/subnets/',variables('subnet1Name'))]",
        "storageApiVersion": "2015-06-15",
        "networkApiVersion": "2015-06-15",
        "computeApiVersion": "2015-06-15",
        "publicIpAddressUrl": "[concat(parameters('armBaseUrl'),'/nested/public-ip.json')]",
        "storageAccountUrl": "[concat(parameters('armBaseUrl'),'/nested/storage.json')]",
        "virtualNetworkUrl": "[concat(parameters('armBaseUrl'),'/nested/vnet-subnet.json')]",
        "networkInterfaceUrl": "[concat(parameters('armBaseUrl'),'/nested/network-interface.json')]",
        "networkSecurityGroupUrl": "[concat(parameters('armBaseUrl'),'/nested/info-nsg.json')]",
        "virtualMachineUrl": "[concat(parameters('armBaseUrl'),'/nested/virtual-machine-with-plan.json')]",
        "virtualMachineExtUrl": "[concat(parameters('armBaseUrl'),'/nested/info-csa-extension.json')]",
        "sqlDataWareHouseSetupURL": "[concat(parameters('armBaseUrl'),'/nested/sqldatawarehouse.json')]",
        "createTableAutomationSetupURL": "[concat(parameters('armBaseUrl'),'/nested/createtableautomationjob.json')]",
        "adfSetupURL": "[concat(parameters('armBaseUrl'),'/nested/azuredatafactory.json')]",
        "fileUris": "[concat(parameters('armBaseUrl'),'/scripts/ICExtentionScript.ps1')]",
        "apiVersion": "2015-10-01",
        "storageLinkedServiceName": "AzureStorageLinkedService",
        "hdInsightOnDemandLinkedServiceName": "HDInsightOnDemandLinkedService",
        "azureSqlDWLinkedServiceName": "AzureSqlDWLinkedService",
        "blobInputDataset": "AzureBlobInput",
        "blobOutputDataset": "AzureBlobOutput",
        "sqlDWOutputDataset": "AzureSqlDWOutput",
        "azureSqlDWLinkedServiceConnectionString": "[concat('Server=tcp:',variables('sqlDWServerName'),'.database.windows.net,1433;Database=', variables('sqlDWDBName'), ';Trusted_Connection=False;User ID=',parameters('sqlDWDBAdminName'),'@',variables('sqlDWServerName'),';Password=',parameters('sqlDWAdminPassword'),';Connection Timeout=30;Encrypt=True')]",
        "clusterSize": 1,
        "version": "3.2",
        "sql-version": "12.0",
        "timeToLive": "00:45:00",
        "frequency": "Hour",
        "interval": 1,
        "writeBatchSize": 0,
        "writeBatchTimeout": "00:00:00",
        "timeout": "01:00:00",
        "automationjoblocation": "South Central US",
        "baseURL": "https://susehpcnc.blob.core.windows.net/test/",
        "automationScriptUri": "[concat(parameters('armBaseUrl'),'/scripts/createTable.ps1')]",
        "runbookDescription": "Create a Database Table in User provided Datawarehouse",
        "sku": "Basic",
        "sqldwlocation": "South Central US",
        "sql-api-version": "2014-04-01",
        "sqldb-api-version": "2015-05-01-preview",
        "sqlfirewallrules-api-version": "2014-04-01",
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": "10995116277760"
