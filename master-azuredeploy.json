                        }
                    }
                }
            }
        },
        {
            "name": "virtualMachineDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "storageAccountDeploy",
                "networkInterfaceDeploy"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('virtualMachineUrl')]",
